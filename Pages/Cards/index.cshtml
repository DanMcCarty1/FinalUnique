@page
@model FinalUnique.Pages.Cards.IndexModel
@{
    ViewData["Title"] = "Index";
}

<h1> Cards listed </h1>
<p>
    <a asp-page="/Cards/AddCard">Add New Card</a>
</p>
<form>
    <p>
        CardName: <input type="text" name="SearchString">
        <input type="submit" value="Filter"/>
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].CardName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].CardColor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].CardPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].Rarity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cards[0].ExspansionName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Cards) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CardName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CardColor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CardPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rarity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExspansionName)
                </td>
            </tr>
        }

    </tbody>
</table>